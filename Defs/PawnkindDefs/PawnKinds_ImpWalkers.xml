<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Scyther -->
  <ThingDef ParentName="BaseWalker">
    <defName>SWFactions_WalkerThing</defName>
    <label>AT-ST</label>
    <description>The All Terrain Scout Transport (AT-ST), also known (derisively) as the chicken walker for its two-legged design, was a bipedal walker used by the Galactic Republic during the late Clone Wars and, later and more extensively, by the Galactic Empire during the Galactic Civil War. It is a successor of the AT-XT.</description>
    <statBases>
      <MoveSpeed>8</MoveSpeed>
      <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.25</ArmorRating_Sharp>
      <MeatAmount>0</MeatAmount>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTime>1.65</defaultCooldownTime>
        <meleeDamageBaseAmount>20</meleeDamageBaseAmount>
        <meleeDamageDef>Cut</meleeDamageDef>
        <linkedBodyPartsGroup>LeftBlade</linkedBodyPartsGroup>
      </li>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTime>1.65</defaultCooldownTime>
        <meleeDamageBaseAmount>20</meleeDamageBaseAmount>
        <meleeDamageDef>Cut</meleeDamageDef>
        <linkedBodyPartsGroup>RightBlade</linkedBodyPartsGroup>
      </li>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTime>1.65</defaultCooldownTime>
        <meleeDamageBaseAmount>7</meleeDamageBaseAmount>
        <meleeDamageDef>Blunt</meleeDamageDef>
        <commonality>0.01</commonality>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
      </li>
    </verbs>
    <race>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>Mechanoid</thinkTreeMain>
      <body>SWFactions_ATSTHull</body>
      <baseBodySize>1.0</baseBodySize>
      <baseHealthScale>1.0</baseHealthScale>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Scyther_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Scyther_Death</soundDeath>
          <soundCall>Pawn_Mech_Scyther_Call</soundCall>
        </li>
      </lifeStageAges>
      <soundCallIntervalRange>
        <min>1000</min>
        <max>2000</max>
      </soundCallIntervalRange>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidSlash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidSlash_Miss</soundMeleeMiss>
    </race>
    <recipes>
      <li>RemoveMechanoidBodyPart</li>
      <li>ShutDownMechanoid</li>
    </recipes>
    <butcherProducts>
      <Steel>40</Steel>
      <Plasteel>25</Plasteel>
      <Component>1</Component>
    </butcherProducts>
	<comps>
	  <li Class="CompPilotable.CompProperties_Pilotable">
	    <entrySound>Pawn_Mech_Centipede_Wounded</entrySound>
		<ejectSound>Pawn_Mech_Centipede_Wounded</ejectSound>
		<pilotSeats>1</pilotSeats>
		<gunnerSeats>1</gunnerSeats>
		<crewSeats>0</crewSeats>
		<passengerSeats>2</passengerSeats>
		<requiredPilots>1</requiredPilots>
		<requiredGunners>1</requiredGunners>
		<requiredCrew>0</requiredCrew>    
		<ejectIfBelowHealthPercent>0.15</ejectIfBelowHealthPercent>
	  </li>
	  <li Class="CompLumbering.CompProperties_Lumbering">
	    <cycledGraphic>
			<texPath>Imp/Walkers/ATSTCycle/ATST</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>4.0</drawSize>
			<shadowData>
				<volume>(0.4, 0.8, 0.4)</volume>
			</shadowData>
		</cycledGraphic>
		<sound>PJ_ATST_Step</sound>
        <secondsPerStep>1.15</secondsPerStep>
		<secondsBetweenSteps>0.5</secondsBetweenSteps>
	  </li>
	</comps>
  </ThingDef>

	<PawnKindDef>
		<defName>SWFactions_WalkerKind</defName>
		<label>AT-ST</label>
		<race>SWFactions_WalkerThing</race>
		<combatPower>260</combatPower>
		<defaultFactionType>PJ_GalacticEmpire</defaultFactionType>
		<aiAvoidCover>true</aiAvoidCover>
		<lifeStages>
			<li>
				<bodyGraphicData>
					<texPath>Imp/Walkers/ATST/ATST</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>4.3</drawSize>
					<shadowData>
						<volume>(0.4, 0.8, 0.4)</volume>
					</shadowData>
				</bodyGraphicData>
			</li>
		</lifeStages>
		<weaponMoney>
			<min>5000</min>
			<max>5000</max>
		</weaponMoney>
		<weaponTags>
			<li>PJ_ATST_Weapon</li>
		</weaponTags>
	</PawnKindDef>
	
